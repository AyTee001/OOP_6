@model OOP_6.Models.DTO.UserUpdateDto

@{
    <form asp-action="Edit" asp-controller="Users" method="post" class="form">
        <input type="hidden" asp-for="Id" />
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName">Enter First Name:</label>
                        <input asp-for="FirstName" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="FirstName"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName">Enter Last Name:</label>
                        <input asp-for="LastName" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address">Address:</label>
                        <input asp-for="Address" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="Address"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BirthDate">Birth Date:</label>
                        <input type="date" asp-for="BirthDate" class="form-control" />
                        <div class="text-danger">
                            <span asp-validation-for="BirthDate"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-danger" asp-controller="Users" asp-action="Delete">Delete User</a>
                </div>
            </div>
        </div>
    </form>
}
